<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F1F1F1"
    tools:context=".ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent" >

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_margin="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/pro"
                />

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/img_profile"
                app:layout_constraintTop_toTopOf="@id/cl_profile"
                app:layout_constraintBottom_toTopOf="@id/btn_edit"
                android:layout_marginLeft="20dp"
                android:text="User"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/tv_user"
                app:layout_constraintTop_toBottomOf="@id/tv_user"
                android:text="LV 2567"
                android:textSize="10sp"
                android:textColor="#696969" />

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_height="20dp"
                app:layout_constraintLeft_toLeftOf="@id/tv_user"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_user"
                app:layout_constraintBottom_toBottomOf="@id/img_profile"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_profile"
                android:text="프로필 편집"
                android:textSize="10sp"
                android:textColor="@color/white" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <HorizontalScrollView
            app:layout_constraintTop_toBottomOf="@id/cl_profile"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:layout_height="100dp" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/img_sticker1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="20dp"
                    android:text="뉴트리아\n헌터"
                    android:gravity="center"
                    android:textSize="8sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/bg_sticker" />

                <TextView
                    android:id="@+id/img_sticker2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/img_sticker1"
                    android:layout_marginLeft="12dp"
                    android:text="황소개구리\n헌터"
                    android:gravity="center"
                    android:textSize="8sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/bg_sticker" />

                <TextView
                    android:id="@+id/img_sticker3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/img_sticker2"
                    android:layout_marginLeft="12dp"
                    android:text="거북이\n헌터"
                    android:gravity="center"
                    android:textSize="8sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/bg_sticker" />

                <TextView
                    android:id="@+id/img_sticker4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/img_sticker3"
                    android:layout_marginLeft="12dp"
                    android:text="현상꾼\n사냥꾼"
                    android:gravity="center"
                    android:textSize="8sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/bg_sticker" />

                <TextView
                    android:id="@+id/img_sticker5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/img_sticker4"
                    android:layout_marginLeft="12dp"
                    android:text="영웅"
                    android:gravity="center"
                    android:textSize="8sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/bg_sticker" />

                <TextView
                    android:id="@+id/img_sticker6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/img_sticker5"
                    android:layout_marginLeft="12dp"
                    android:text="U.M.A"
                    android:gravity="center"
                    android:textSize="8sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/bg_sticker" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </HorizontalScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>






</FrameLayout>